			// contacts
			.contacts
				.wrapper
					.title Контакты
					.contacts_row
						.contacts_block.contacts_block--form
							ul.contacts_list
								li.contacts_item
									span.contacts_icon.contacts_icon--tel
									a(href="tel:89173261262") 8 (917) 326-12-62
									a(href="tel:89173261262") 8 (917) 326-12-62
								li.contacts_item
									span.contacts_icon.contacts_icon--location
									span Митрофаньевское шоссе, 2к2
								li.contacts_item
									span.contacts_icon.contacts_icon--email
									a(href="mailto:info@mail.ru") info@mail.ru
								li.contacts_item
									span.contacts_icon.contacts_icon--clock
									span Время работы на этом месте
							.contacts_title Если у вас остались вопросы, заполните форму и мы свяжемся с вами
							form(action="").contacts_form
								.row
									.contacts_col
										.form_field
											.form_name Ваше имя:
											.form_input.form_input--icon-user
												input(type="text" name="name")
									.contacts_col
										.form_field
											.form_name Ваш e-mail:
											.form_input.form_input--icon-email
												input(type="text" name="email")
								.form_field
									.form_name Ваш вопрос:
									.form_input.form_input--textarea
										textarea
								.form_consent
									input(type="checkbox")#modalCheckbox
									label(for="modalCheckbox").form_checkbox
									label(for="modalCheckbox").form_label Даю согласие на обработку персональных данных
								.modal_btn  
									button(type="submit").btn-red Отправить
						.contacts_block.contacts_block--map
							<div class="contact__maps maps-block" data-name="196066, г. Санкт-Петербург,<br> Московский проспект, 212,<br> офис 3053" data-zoom="14" data-coords-center="59.852118, 30.327250" data-link="">
